<h1>Listing campaigns</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Location</th>
    <th>Type</th>
    <th>Experiences</th>
    <th>Revenue</th>
    <th>Segments</th>
    <th>Success events</th>
    <th>Learnings</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @campaigns.each do |campaign| %>
  <tr>
    <td><%= campaign.name %></td>
    <td><%= campaign.start_date %></td>
    <td><%= campaign.end_date %></td>
    <td><%= campaign.location %></td>
    <td><%= campaign.type %></td>
    <td><%= campaign.experiences %></td>
    <td><%= campaign.revenue %></td>
    <td><%= campaign.segments %></td>
    <td><%= campaign.success_events %></td>
    <td><%= campaign.learnings %></td>
    <td><%= link_to 'Show', campaign %></td>
    <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
    <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

