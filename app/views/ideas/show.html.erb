<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @idea.name %>
</p>

<p>
  <b>Submitter:</b>
  <%= @idea.submitter.name %>
</p>

<p>
  <b>Priority:</b>
  <%= @idea.priority_string %>
</p>

<p>
  <b>Impact:</b>
  <%= @idea.impact_string %>
</p>

<p>
  <b>Revenue impact:</b>
  <%= @idea.revenue_impact_string %>
</p>

<p>
  <b>Technical impact:</b>
  <%= @idea.technical_impact_string %>
</p>

<p>
  <b>Collaborators:</b>
  <ul>
    <% @idea.collaborators.each do |c| %>
    <li><%= c.name %></li>
    <% end %>
  </ul>
</p>

<p>
  <b>Location:</b>
  <%= @idea.location %>
</p>

<p>
  <b>Potential learnings:</b>
  <%= @idea.potential_learnings %>
</p>

<%= link_to 'Edit', edit_idea_path(@idea) %> |
<%= link_to 'Back', ideas_path %>
