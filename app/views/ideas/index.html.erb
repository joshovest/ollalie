<h1>Listing ideas</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Submitter</th>
    <th>Location</th>
    <th>Potential learnings</th>
    <th>Priority</th>
    <th>Impact</th>
    <th>Revenue impact</th>
    <th>Technical impact</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ideas.each do |idea| %>
  <tr>
    <td><%= idea.name %></td>
    <td><%= idea.submitter_id %></td>
    <td><%= idea.location %></td>
    <td><%= idea.potential_learnings %></td>
    <td><%= idea.priority %></td>
    <td><%= idea.impact %></td>
    <td><%= idea.revenue_impact %></td>
    <td><%= idea.technical_impact %></td>
    <td><%= link_to 'Show', idea %></td>
    <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
    <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

